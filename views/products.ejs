    <div class="row1">
    <h2><%=p.title%></h2><br><br>

         <div class="col-xs-12 col-md-8">
                <img class="spi" style="height: 400px;width:inherit;"src="/product_images/<%= p.id %>/<%= p.image %>" alt="">
                
        </div>

        <div class="col-xs-12">
            <ul class="gallery">
                <% galleryImages.forEach(function(image){ %>
                 <% if (image != "thumbs") { %>
                 <li>
                    <a data-fancybox="gallery" href="/product_images/<%= p.id %>/gallery/<%= image %>">
                        <img src="/product_images/<%= p.id %>/gallery/thumbs/<%= image %>" alt="">
                    </a>
                </li>
                <% } %>
                <% }); %>
            </ul>
        </div>
        <div class="col-xs-12 col-md-10">
            <p><%= p.desc %></p>
            <p>â‚¹<%= parseFloat(p.price).toFixed(2) %></p>
